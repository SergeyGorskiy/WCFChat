<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="511*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bConDiscon" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="206" RenderTransformOrigin="0.494,0.52" Height="29" Background="#FF8EEE79" Click="ButtonClick"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="237" Margin="10,55,0,0" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="112" Margin="10,297,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="2" KeyDown="TbMessageKeyDown"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Margin="247,10,0,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Height="29" Width="535" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
